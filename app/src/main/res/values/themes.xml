<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FlatstackTestTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#DA3F67</item>
        <item name="colorPrimaryVariant">#FA7268</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FA7268</item>
        <item name="colorSecondaryVariant">#C62368</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FlatstackTestTask.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FlatstackTestTask.AppBarOverlay" parent="Theme.AppCompat.NoActionBar" />

    <style name="Theme.FlatstackTestTask.PopupOverlay" parent="Theme.AppCompat.NoActionBar" />
</resources>